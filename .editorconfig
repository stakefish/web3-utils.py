root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,json,yml,yaml}]
indent_size = 2
indent_style = space
max_line_length = 132

[*.{py}]
indent_size = 4
indent_style = space
max_line_length = 132

[*.sh]
indent_size = 8
indent_style = tab
max_line_length = 132
